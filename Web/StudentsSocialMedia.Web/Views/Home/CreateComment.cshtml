@model StudentsSocialMedia.Web.ViewModels.Home.CreateCommentInputModel
@{ 
    this.ViewData["Title"] = "Add a comment";
}

<form method="post" class="col-md-6 offset-3-md">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary btn-md-2" value="Submit" />
</form>
